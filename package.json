{
  "name": "inventox",
  "version": "1.0.0",
  "description": "Sistema de Gestão de Inventário",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "tailwind:build": "tailwindcss -i ./frontend/tailwind.input.css -o ./frontend/dist/styles.css --minify",
    "tailwind:watch": "tailwindcss -i ./frontend/tailwind.input.css -o ./frontend/dist/styles.css --watch"
  },
  "keywords": [
    "inventario",
    "gestao",
    "electron"
  ],
  "author": "Sandro Lopes",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "3.4.17"
  },
  "build": {
    "appId": "com.inventox.app",
    "productName": "InventoX",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/**/*",
      "api/**/*",
      ".htaccess",
      "Dockerfile"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
